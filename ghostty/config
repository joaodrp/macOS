# Ghostty configuration
# Reload at runtime with cmd+shift+, (macOS)
# Full config reference: ghostty +show-config --default --docs

# ------------------------------------------------------------------------------
# Theme
# ------------------------------------------------------------------------------

# Auto-switches with macOS dark/light mode
# List available themes with: ghostty +list-themes
theme = light:Gruvbox Light Hard,dark:Gruvbox Dark Hard

# ------------------------------------------------------------------------------
# Font
# ------------------------------------------------------------------------------

# Font family. List available fonts with: ghostty +list-fonts
font-family = JetBrainsMono Nerd Font

# Font size in points. Scaled appropriately for screen DPI
font-size = 12

# Thicken font strokes for better readability on high-DPI displays
font-thicken = true
font-thicken-strength = 128

# ------------------------------------------------------------------------------
# Window
# ------------------------------------------------------------------------------

# Window chrome follows system appearance (dark/light mode)
window-theme = system

# Padding between terminal cells and window borders (in points)
window-padding-y = 5,10
window-padding-x = 10,10

# Save/restore window state across launches (macOS only)
# Values: default, never, always
window-save-state = always

# New tabs/splits inherit working directory from focused terminal
window-inherit-working-directory = true

# Hide resize overlay (default: after-first)
resize-overlay = never

# Minimal macOS titlebar for cleaner appearance
macos-titlebar-style = "transparent"
macos-titlebar-proxy-icon = "hidden"
title = " "

# ------------------------------------------------------------------------------
# Splits
# ------------------------------------------------------------------------------

# Less fading on unfocused splits (default: 0.7)
unfocused-split-opacity = 0.90

# Gruvbox tones for split visuals
unfocused-split-fill = #928374

# ------------------------------------------------------------------------------
# Behavior
# ------------------------------------------------------------------------------

# Hide mouse cursor immediately when typing
mouse-hide-while-typing = true

# Auto-copy selected text. 'clipboard' copies to both selection and system clipboard
# Middle-click paste always uses selection clipboard
copy-on-select = clipboard

# Block cursor, no blinking, thicker for visibility
cursor-style = block
cursor-style-blink = false
adjust-cursor-thickness = 300%

# Skip confirmation when closing a surface (tab/split/window)
confirm-close-surface = false

# Fish shell integration (prompt marks, cwd tracking, etc.)
shell-integration = fish

# ------------------------------------------------------------------------------
# macOS
# ------------------------------------------------------------------------------

# Treat left Option key as Alt for terminal sequences
# Values: true, false, left, right
macos-option-as-alt = left

# ------------------------------------------------------------------------------
# Keybindings
# ------------------------------------------------------------------------------

# Shift+enter sends literal newline (useful for multi-line input)
keybind = shift+enter=text:\n

