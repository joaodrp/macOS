[include]
    path = .gitconfig.local
[user]
	name = Jo√£o Pereira
[gpg]
	program = gpg
[commit]
	gpgsign = true
[alias]
	# TODO
[color]
	ui = auto
[core]
	pager = diff-so-fancy | less --tabs=4 -RFXS --pattern '^(Date|added|deleted|modified): '
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
	quotepath = false
	excludesfile = ~/.gitignore
[push]
	default = current
[pull]
	rebase = false
