{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox-light-hard",
  "autoupdate": true,
  "plugin": [
    "@mohak34/opencode-notifier@latest",
    "@gitlab/opencode-gitlab-plugin@latest",
    "@franlol/opencode-md-table-formatter",
    "cc-safety-net"
  ],
  "share": "manual",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "keybinds": {
    "leader": "ctrl+a"
  },
  "permission": {
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "codesearch": "allow",
    "task": "allow",
    "skill": "allow",
    "lsp": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "external_directory": "ask",
    "bash": {
      "*": "ask",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "less *": "allow",
      "file *": "allow",
      "which *": "allow",
      "type *": "allow",
      "pwd": "allow",
      "tree *": "allow",
      "wc *": "allow",
      "du *": "allow",
      "df *": "allow",
      "stat *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "fd *": "allow",
      "ag *": "allow",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git branch*": "allow",
      "git remote*": "allow",
      "git tag*": "allow",
      "npm list*": "allow",
      "npm info*": "allow",
      "brew list*": "allow",
      "brew info*": "allow",
      "cargo info*": "allow",
      "pip list*": "allow",
      "pip show*": "allow",
      "go list*": "allow",
      "curl *": "allow",
      "wget *": "allow",
      "eza *": "allow",
      "bat *": "allow",
      "glow *": "allow",
      "jq *": "allow",
      "yq *": "allow",
      "htop": "allow",
      "ncdu *": "allow",
      "pstree *": "allow",
      "tig *": "allow",
      "tldr *": "allow",
      "cloc *": "allow",
      "watch *": "allow",
      "shellcheck *": "allow",
      "yamllint *": "allow",
      "gh pr list*": "allow",
      "gh pr view*": "allow",
      "gh pr diff*": "allow",
      "gh issue list*": "allow",
      "gh issue view*": "allow",
      "gh repo view*": "allow",
      "gh run list*": "allow",
      "gh run view*": "allow",
      "glab mr list*": "allow",
      "glab mr view*": "allow",
      "glab mr diff*": "allow",
      "glab issue list*": "allow",
      "glab issue view*": "allow",
      "docker ps*": "allow",
      "docker images*": "allow",
      "docker logs*": "allow",
      "docker inspect*": "allow",
      "docker-compose ps*": "allow",
      "docker-compose logs*": "allow",
      "kubectl get*": "allow",
      "kubectl describe*": "allow",
      "kubectl logs*": "allow",
      "helm list*": "allow",
      "helm show*": "allow",
      "helm status*": "allow",
      "k9s*": "allow",
      "stern *": "allow",
      "minikube status*": "allow",
      "mise list*": "allow",
      "mise current*": "allow",
      "crane ls*": "allow",
      "crane manifest*": "allow",
      "crane digest*": "allow",
      "skopeo inspect*": "allow",
      "skopeo list-tags*": "allow",
      "dive *": "allow",
      "cosign verify*": "allow",
      "sudo *": "deny",
      "su *": "deny"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "playwright": {
      "type": "local",
      "command": [
        "bunx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  }
}
